<!DOCTYPE html>

	<!-- head -->
	<%- include( '../partials/head.ejs', { page: 'Edit' } )  %>

  <body class="has-navbar-fixed-top">
    <!-- https://bulma.io/documentation/components/navbar/#fixed-navbar -->
    <%- include ( '../partials/nav.ejs') %>

    <section class="hero is-medium has-background-light">
      <div class="hero-body">
        <h1 class="title">Edit Review page</h1>
      </div>
    </section>

    <section class="container is-max-widescreen p-5">
      <!--  NOTE: action will be the route, method will be the HTTP verb-->
      <form action="/reviews/<%=review.id %>?_method=PUT" method="POST">
        <div class="field">
          <label class="label">Review Content</label>
          <div class="control">
            <input
              class="input"
              type="text"
              placeholder="review content"
              name="content"
              value="<%= review.content %> "
            />
          </div>
        </div>

        <div class="field">
          <label class="label">Review Rating</label>
          <div class="control">
            <input
              class="input"
              type="number"
              placeholder="review rating"
              name="price"
              value="<%= review.rating %>"
            />
          </div>
        </div>


        <div class="field is-grouped">
          <div class="control">
            <a class="button is-info" href="/reviews/ "
              >Cancel</a>
            <button class="button is-success" type="submit">Edit Review</button>
          </div>
        </div>
      </form>
    </section>
  </body>
</html>